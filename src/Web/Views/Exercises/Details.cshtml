@{
    ViewData["Title"] = "Exercises";
}

<style>
    #stepsEditor {
        height: 300px;
    }

    #imgExerciseImage {
        object-fit: cover;
        height: 285px;
        width: 100%;
    }
</style>

<section class="section exercises-details">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" action="/" class="row g-3 mt-4">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Exercise Name</label>
                                <input type="text" name="iptExerciseName" class="form-control" id="iptExerciseName">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Muscle Groups</label>
                                <select class="form-select" multiple id="sltExerciseMuscleGroups" aria-label="Muscle groups"></select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Gym Equipments</label>
                                <select class="form-select" multiple id="sltExerciseGymEquipments" aria-label="Gym equipments"></select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <div id="stepsEditor"></div>
                            </div>
                            <div class="col-md-6 profile-card d-flex flex-column align-items-center">
                                <img src="~/img/default-image.png" alt="Exercise image" id="imgExerciseImage">
                                <div class="row mb-3 mt-3">
                                    <div class="col-sm-12">
                                        <input class="form-control" type="file" id="iptUploadExerciseImage">
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
                            <button type="reset" class="btn btn-secondary" id="btnReset">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $.when(
            $.getScript("/js/pages/exercises/details.js"),
            $.Deferred(function (deferred) {
                $(deferred.resolve);
            })
        ).done(function () {
            exercisesDetailsPage.init({
                wrapper: ".exercises-details"
            });
        });
    </script>
}