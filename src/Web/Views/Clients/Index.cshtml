@{
    ViewData["Title"] = "Clients";
}

<section class="section clients-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body p-3 dt-clients-wrapper">
                    @* <a class="btn btn-primary mb-3">
                        <i class="bi bi-plus"></i>Novo
                    </a>*@
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $.when(
            $.getScript("/js/pages/clients/index.js"),
            $.Deferred(function (deferred) {
                $(deferred.resolve);
            })
        ).done(function () {
            clientIndexPage.init({
                wrapper: ".dt-clients-wrapper"
            });
        });
    </script>
}