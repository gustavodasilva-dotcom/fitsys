@{
    ViewData["Title"] = "Employees";
}

<section class="section employee-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body p-3 dt-employee-wrapper"></div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $.when(
            $.getScript("/js/pages/employees/index.js"),
            $.Deferred(function (deferred) {
                $(deferred.resolve);
            })
        ).done(function () {
            employeesIndexPage.init({
                wrapper: ".dt-employee-wrapper"
            });
        });
    </script>
}